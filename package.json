{
  "name": "@4meta5/engram",
  "version": "0.2.2",
  "description": "Cognitive repository for developer memory. Indexes code AND context.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "engram": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:packages && tsc",
    "build:packages": "npm run build -w @4meta5/semantic-memory && npm run build -w @4meta5/skill-generator",
    "dev": "tsc --watch",
    "test": "npm run test --workspaces && vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "cli": "tsx src/cli.ts"
  },
  "workspaces": [
    "packages/semantic-memory",
    "packages/skill-generator"
  ],
  "keywords": [
    "developer-tools",
    "code-search",
    "memory",
    "context",
    "ai-agents",
    "local-first",
    "skill-generation",
    "semantic-search"
  ],
  "author": "Patch <patch@bobamatchasolutions.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bobamatcha/engram.git"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@4meta5/semantic-memory": "workspace:*",
    "@4meta5/skill-generator": "workspace:*",
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
